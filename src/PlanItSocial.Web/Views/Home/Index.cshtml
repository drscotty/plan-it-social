@{
    ViewData["Title"] = "Home Page";
}

<script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            initialView: 'dayGridMonth',
            events: @Html.Raw(ViewData["Events"]),
            resources: @Html.Raw(ViewData["Resources"]),
            headerToolbar: {
                left: 'today prev, next',
                center: 'title',
                right: 'timeGridWeek,dayGridMonth,listMonth'
            },
        });
        calendar.render();
      });

</script>

<div class="text-center">
    <h1 class="display-4">Welcome To PlanItSocial</h1>
    <a href="/MyCalendar">View My Calendar</a>
    <div/>
    <img src="~/images/socialcalendar.jpg" alt="Your Social Calendar!" asp-append-version="true">
</div>